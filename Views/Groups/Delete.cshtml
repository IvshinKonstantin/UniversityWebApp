@model UniversityWebApp.Models.Group

@{
    ViewData["Title"] = "Удалить группу";
}

<h1>Удалить группу</h1>

<h3>Вы уверены, что хотите удалить эту группу?</h3>
<div>
    <h4>Группа</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Название
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Факультет
        </dt>
        <dd class="col-sm-10">
            @(Model.Faculty?.Name ?? "Не указан")
        </dd>
        <dt class="col-sm-2">
            Год поступления
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
    </form>
</div>
