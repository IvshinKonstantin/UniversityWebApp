@model UniversityWebApp.Models.Faculty

@{
    ViewData["Title"] = "Добавить факультет";
}

<h1>Добавить факультет</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Dean" class="control-label">Декан</label>
        <input asp-for="Dean" class="form-control" />
        <span asp-validation-for="Dean" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Создать" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
    </div>
</form>
