@model UniversityWebApp.Models.Faculty

@{
    ViewData["Title"] = "Удалить факультет";
}

<h1>Удалить факультет</h1>

<h3>Вы уверены, что хотите удалить этот факультет?</h3>
<div>
    <h4>Факультет</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Название
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Декан
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dean)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
    </form>
</div>
